@model IEnumerable<CompanyTask.Models.CompanyModel>
@{
    ViewBag.Title = "Companies";
}

<h2>Companies</h2>

<p>
    @Html.ActionLink("Create New Company", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Company Name</th>
            <th>Start Date</th>
            <th style="text-align:center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr id="row-@company.Id">
                <td>@company.Id</td>
                <td>@company.CompanyName</td>
                <td>@company.Startdate.ToShortDateString()</td>
                <td class="d-flex justify-content-evenly">
                    @Html.ActionLink("Edit", "Edit", new { id = company.Id }, new { @class = "btn btn-primary" })

                    <form id="deleteForm-@company.Id" action="@Url.Action("Delete", "Company")" method="post" style="display:none;">
                        <input type="hidden" name="id" value="@company.Id" />
                    </form>

                    <a href="javascript:void(0);" onclick="confirmDelete(@company.Id)" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this company?")) {
            document.getElementById("deleteForm-" + id).submit();
        }
    }
</script>
